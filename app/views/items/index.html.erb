<h3>View All Items </h3>
<%= render 'shared/flash' %>
<%= link_to "assign item to employee",new_employees_item_path %>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th scope="col">Brand</th>
      <th scope="col">Category</th>
       <th scope="col">Item</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @items.each do |item| %>
       <tr>
        <td><%= item.brand.name %></td>
        <td><%= item.category.name %></td>
        <td><%= item.name %></td>
        <td><%= link_to "See details",item, class:"btn btn-primary" %></td>
        <td><%= link_to "Edit Item",edit_item_path(item), class:"btn btn-primary" %></td>
        <td><%= link_to "Delete",item,method: :delete,data: {confirm: "Are You sure?"},class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>