<%= render 'shared/flash' %>
<div class="jumbotron">
<h2>Employee Details</h2>
<p>Name: <%= @employee.name %></p>
<p>Email: <%= @employee.email %></p>
<p>Status: <%= @employee.get_status %></p>
</div>
<% if employee_logged_in %>
  <%= link_to "Assign Issue",new_employee_issue_url(@employee), class:"btn btn-danger" %>
<% end %>
<%= link_to "View Employee Issues",employee_view_issues_url(@employee), class:"btn btn-primary" %>
<h3>items Owned</h3>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th scope="col">Brand</th>
      <th scope="col">Category</th>
      <th scope="col">Item</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
     <% @assigned_items.each do |assigned| %>
       <tr>
        <td><%= assigned.item.brand.name %></td>
        <td><%= assigned.item.category.name %></td>
        <td><%= assigned.item.name %></td>
        <td><%= assigned.status %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
