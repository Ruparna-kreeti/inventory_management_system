<%= render 'shared/flash' %>
<%= link_to "Add Brand",new_brand_path, class:'btn btn-primary' %>
<h1>All Brands</h1>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @brands.each do |brand| %>
       <tr>
        <td><%= brand.name %></td>
        <td><%= link_to "Edit Brand",edit_brand_path(brand),class:"btn btn-primary" %></td>
        <td><%= link_to "Delete Brand", brand,method: :delete, data:{confirm:"are you sure?"},class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>